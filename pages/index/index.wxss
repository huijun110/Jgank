.scroll-view_H{
  white-space: nowrap;
  position: fixed;
  z-index: 999;
}

.scroll-view-item_H{
  display: inline-block;
  line-height: 80rpx;
  width: 180rpx;
  text-align: center;
}

.sv-item-on{
  background-color: #0aa;
  color: #ddd;
}

.sv-item-off{
  background-color: #088;
  color: #fff;
}

/*common*/
.list_item{
  border: 1rpx solid #ddd;
  margin: 15rpx;
  padding: 15rpx;
  border-radius: 10rpx;
}

.who{
    text-align: right;
    color: #aaa;
}

.empty-head{
  height: 80rpx;
}

/*推荐部分*/
.recommend_head{
  width: 100%;
  height: 400rpx;
  margin-top: 80rpx;
}

.recommend_title{
  display: inline-block;
  padding: 10rpx;
  margin-top: 10rpx;
  margin-left: 15rpx;
  border-radius: 10rpx;
  color: #fff;
}

/*福利*/

.welfare-img-item{
  display: inline-block;
  width: 50%;
}